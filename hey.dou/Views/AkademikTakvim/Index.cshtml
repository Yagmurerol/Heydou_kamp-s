
@model List<AkademikEtkinlik>
@{
    ViewData["Title"] = "Akademik Takvim";
}

<body class="bg-background-light dark:bg-background-dark font-display text-[#111418] dark:text-white">
<div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
<div class="layout-container flex h-full grow flex-col">
    <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#f0f2f4] dark:border-b-[#2c3a47] px-6 sm:px-10 lg:px-20 py-3">
        <div class="flex items-center gap-8">
            <div class="flex items-center gap-4 text-[#111418] dark:text-white">
                <div class="size-8 text-primary">
                    <svg fill="none" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">...</svg>
                </div>
                <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">Okul Logosu</h2>
            </div>
            <div class="hidden lg:flex items-center gap-9">
                <a class="text-sm font-medium leading-normal hover:text-primary" href="#">Akademik</a>
                <a class="text-sm font-medium leading-normal hover:text-primary" href="#">Kayıt</a>
                <a class="text-sm font-medium leading-normal hover:text-primary" href="#">Kampüs Hayatı</a>
                <a class="text-sm font-medium leading-normal hover:text-primary" href="#">Hakkımızda</a>
            </div>
        </div>
        <div class="flex items-center gap-4">
            <label class="relative hidden sm:flex flex-col min-w-40 !h-10 max-w-64">...</label>
            <button class="flex min-w-[84px] max-w-[480px] ...">Başvur</button>
            <button class="lg:hidden text-[#111418] dark:text-white">...</button>
        </div>
    </header>

    <main class="flex-1 px-6 sm:px-10 lg:px-20 py-8">
        <div class="max-w-7xl mx-auto">
            <div class="flex flex-wrap justify-between items-center gap-4 mb-8">
                <p class="text-4xl font-black leading-tight tracking-[-0.033em]">Akademik Takvim</p>
                <button class="flex items-center gap-2 h-10 px-4 bg-primary text-white rounded-lg text-sm font-bold hover:bg-primary/90">
                    <span class="material-symbols-outlined">print</span>
                    <span>Yazdır</span>
                </button>
            </div>
            <div class="flex flex-col lg:flex-row gap-8">
                <div class="w-full lg:w-1/4 xl:w-1/5 space-y-6">
                    <div class="bg-white dark:bg-[#1a2835] p-4 rounded-lg shadow">
                        <h3 class="font-bold text-lg mb-4">Filtrele</h3>
                        <div class="space-y-3">
                            <div class="flex items-center"><input .../>Tümü</div>
                            <div class="flex items-center"><input .../>Sınavlar</div>
                            <div class="flex items-center"><input .../>Tatiller</div>
                            <div class="flex items-center"><input .../>Kayıt Dönemleri</div>
                        </div>
                    </div>
                    <div class="bg-white dark:bg-[#1a2835] p-4 rounded-lg shadow">
                        <h3 class="font-bold text-lg mb-4">Renk Kodu</h3>
                        <div class="space-y-2">
                            <div class="flex items-center gap-2"><div class="size-4 ... bg-[#f59e0b]"></div>Sınavlar</div>
                            <div class="flex items-center gap-2"><div class="size-4 ... bg-[#10b981]"></div>Tatiller</div>
                            <div class="flex items-center gap-2"><div class="size-4 ... bg-[#ef4444]"></div>Kayıt Dönemleri</div>
                        </div>
                    </div>
                </div>
                
                <div class="flex-1 bg-white dark:bg-[#1a2835] p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between mb-6">
                        <button>...</button>
                        <h2 class="text-xl font-bold">Eylül 2024</h2> <button>...</button>
                    </div>
                    <div class="grid grid-cols-7 gap-1 text-center">
                        <div class="font-bold ...">Pzt</div>
                        <div class="font-bold ...">Paz</div>
                        
                        <div class="text-gray-400 ...">26</div>
                        <div class="py-2 relative">2
                            <div class="absolute bottom-1 ..."><div class="size-2 ... bg-[#ef4444]"></div></div>
                        </div>
                        <div class="text-gray-400 ...">6</div>
                    </div>
                    
                    <div class="mt-8">
                        <details class="flex flex-col border-t ... py-2 group" open="">
                            <summary class="flex cursor-pointer items-center justify-between gap-6 py-2">
                                <p class="text-base font-medium">Yaklaşan Etkinlikler</p>
                                <span class="material-symbols-outlined ...">expand_more</span>
                            </summary>
                            
                            <div class="space-y-3 pt-2">
                                
                                @foreach (var etkinlik in Model)
                                {
                                    <div class="flex items-start gap-3 p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800/50">
                                        <div class="size-4 mt-1 rounded-full" style="background-color: @etkinlik.RenkKodu"></div>
                                        <div>
                                            <p class="font-semibold">@etkinlik.Baslik</p>
                                            <p class="text-sm text-[#617589] dark:text-[#a6b3c1]">@etkinlik.Aciklama</p>
                                        </div>
                                    </div>
                                }
                                
                                @if (!Model.Any())
                                {
                                    <p class="text-sm text-[#617589] dark:text-[#a6b3c1]">Gösterilecek yaklaşan etkinlik bulunmamaktadır.</p>
                                }

                            </div>
                        </details>
                    </div>
                    </div>
            </div>
        </div>
    </main>
</div>
</div>
</body>