@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    string adSoyad = HttpContextAccessor.HttpContext?.Session.GetString("AdSoyad") ?? "Misafir";
    string rol = HttpContextAccessor.HttpContext?.Session.GetString("Rol") ?? "Ogrenci";
}

<!DOCTYPE html>
<html lang="tr" class="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeyDOU</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,container-queries"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- ✅ Material Symbols (BOTH) -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />

    <!-- ✅ TEK Tailwind Config -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#F97316",
                        "primary-light": "#FFEDD5",
                        "primary-dark": "#C2410C",
                        "background-light": "#F8FAFC",
                        "background-dark": "#0F172A",
                        "card-light": "#FFFFFF",
                        "card-dark": "#1E293B",
                    },
                    fontFamily: {
                        display: ["'Plus Jakarta Sans'", "sans-serif"],
                        sans: ["'Plus Jakarta Sans'", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "1rem",
                        xl: "1.5rem",
                        full: "9999px"
                    }
                }
            }
        };
    </script>

    <style>
        /* ✅ İki class da ikon göstersin */
        .material-symbols-outlined,
        .material-symbols-rounded {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            display: inline-flex;
            vertical-align: middle;
            line-height: 1;
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #cbd5e1;
            border-radius: 20px;
        }

        .dark ::-webkit-scrollbar-thumb {
            background-color: #334155;
        }
    </style>

    @RenderSection("Head", required: false)
</head>

<body class="font-sans bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 antialiased transition-colors duration-300">
    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">

        <!-- ✅ Ortak Üst Bar -->
        <header class="sticky top-0 z-50 backdrop-blur bg-white/75 dark:bg-background-dark/80 border-b border-slate-200 dark:border-slate-800">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-10 py-4 flex items-center justify-between">
                <div class="flex items-center gap-2 text-primary font-extrabold text-2xl tracking-tight">
                    <span class="material-symbols-outlined text-3xl">school</span>
                    <a href="/Home/Index" class="hover:opacity-90 transition">HeyDOU</a>
                </div>

                <div class="flex items-center gap-3">
                    <button type="button"
                            onclick="window.history.back()"
                            class="inline-flex items-center gap-2 h-10 px-4 rounded-xl border border-slate-200 dark:border-white/10 bg-white dark:bg-white/5 text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-white/10 transition">
                        <span class="material-symbols-outlined text-[20px]">arrow_back</span>
                        Geri
                    </button>

                    <a href="/Home/Index"
                       class="inline-flex items-center gap-2 h-10 px-4 rounded-xl bg-slate-900 text-white hover:bg-black transition shadow-sm">
                        <span class="material-symbols-outlined text-[20px]">home</span>
                        Ana Sayfa
                    </a>
                </div>
            </div>
        </header>

        <!-- ✅ Sayfa içeriği -->
        <main class="px-4 sm:px-6 lg:px-10 py-8 flex-1">
            <div class="mx-auto max-w-7xl">
                @RenderBody()
            </div>
        </main>

        <footer class="text-center text-slate-400 text-sm pb-8">
            © 2025 HeyDOU - Kişiselleştirilmiş Öğrenci Portalı.
        </footer>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- ✅ Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
