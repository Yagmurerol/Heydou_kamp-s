@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;

    // DÜZELTME: HttpContext'ten sonra ? koyduk. Session'dan sonra ? koyduk.
    // Bu sayede "Nesne yoksa hata verme, null geç" diyoruz.
    string adSoyad = HttpContextAccessor.HttpContext?.Session?.GetString("AdSoyad") ?? "Misafir";
    string rol = HttpContextAccessor.HttpContext?.Session?.GetString("Rol") ?? "Ogrenci";

    string bugun = DateTime.Now.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"));
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>HeyDOU - Öğrenci Portalı</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    fontFamily: {
                        display: ["'Plus Jakarta Sans'", "sans-serif"],
                        sans: ["'Plus Jakarta Sans'", "sans-serif"],
                    },
                    colors: {
                        primary: "#F97316",
                        "primary-light": "#FFEDD5",
                        "primary-dark": "#C2410C",
                        "background-light": "#F8FAFC",
                        "background-dark": "#0F172A",
                        "card-light": "#FFFFFF",
                        "card-dark": "#1E293B",
                    },
                    borderRadius: {
                        DEFAULT: "1rem",
                    },
                },
            },
        };
    </script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #cbd5e1;
            border-radius: 20px;
        }

        .dark ::-webkit-scrollbar-thumb {
            background-color: #334155;
        }

        .material-symbols-rounded {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 font-sans transition-colors duration-300 antialiased h-screen overflow-hidden flex">

    <aside class="w-64 bg-card-light dark:bg-card-dark border-r border-slate-200 dark:border-slate-700 flex flex-col justify-between hidden md:flex transition-colors duration-300">
        <div>
            <div class="h-20 flex items-center px-8 border-b border-slate-100 dark:border-slate-700/50">
                <div class="flex items-center gap-2 text-primary font-bold text-2xl tracking-tight">
                    <span class="material-symbols-rounded filled text-3xl">school</span>
                    HeyDOU
                </div>
            </div>
            <nav class="p-4 space-y-1 mt-4">
                <p class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Ana Menü</p>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl bg-orange-50 dark:bg-orange-900/20 text-primary font-medium transition-colors" href="#">
                    <span class="material-symbols-rounded">dashboard</span>
                    Genel Bakış
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/Yemekhane/Index">
                    <span class="material-symbols-rounded">restaurant_menu</span>
                    Yemekhane
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/AkademikTakvim/Index">
                    <span class="material-symbols-rounded">event</span>
                    Akademik Takvim
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/Staj/Index">
                    <span class="material-symbols-rounded">work</span>
                    Staj İlanları
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/Anket/Index">
                    <span class="material-symbols-rounded">poll</span>
                    Anketler
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/Kroki/Index">
                    <span class="material-symbols-rounded">map</span>
                    Kampüs Krokisi
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-slate-100 transition-colors"
                   href="/AiDanisman/Index">
                    <span class="material-symbols-rounded text-primary">smart_toy</span>
                    AI Danışman
                </a>

                <a class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors mt-4"
                   href="/Account/Logout">
                    <span class="material-symbols-rounded">logout</span>
                    Çıkış Yap
                </a>
            </nav>
        </div>

        <div class="p-4 border-t border-slate-100 dark:border-slate-700/50">
            <a class="flex items-center gap-3 p-2 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors group" href="#">
                <div class="w-10 h-10 rounded-full bg-primary/20 text-primary flex items-center justify-center font-bold text-lg">
                    @adSoyad.Substring(0, 1).ToUpper()
                </div>
                <div class="flex flex-col">
                    <span class="text-sm font-bold text-slate-800 dark:text-white group-hover:text-primary transition-colors">@adSoyad</span>
                    <span class="text-xs text-slate-500 dark:text-slate-400">@rol</span>
                </div>
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-y-auto">

        <header class="h-20 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md sticky top-0 z-10 px-8 flex items-center justify-between border-b border-slate-200/50 dark:border-slate-800/50">
            <div class="flex items-center gap-4 md:hidden">
                <button class="text-slate-500 hover:text-slate-800 dark:text-slate-400 dark:hover:text-white">
                    <span class="material-symbols-rounded">menu</span>
                </button>
                <span class="font-bold text-xl text-primary">HeyDOU</span>
            </div>
            <div class="hidden md:flex flex-col">
                <h2 class="text-xl font-bold text-slate-800 dark:text-white">Genel Bakış</h2>
                <span class="text-xs text-slate-500">Hoş geldin, güzel bir gün dileriz!</span>
            </div>
            <div class="flex items-center gap-4">
                <button class="relative p-2 text-slate-500 hover:bg-white dark:hover:bg-slate-800 rounded-full transition-all hover:text-primary">
                    <span class="material-symbols-rounded">notifications</span>
                    <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border-2 border-background-light dark:border-background-dark"></span>
                </button>
            </div>
        </header>

        <div class="p-6 md:p-8 lg:p-10 max-w-7xl mx-auto w-full">

            <div class="mb-10 flex flex-col md:flex-row justify-between items-end gap-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-display font-bold text-slate-900 dark:text-white mb-2">
                        Merhaba, <span class="text-primary">@adSoyad!</span> 👋
                    </h1>
                    <p class="text-slate-500 dark:text-slate-400 text-lg max-w-2xl">
                        Bugün kampüste seni bekleyen etkinliklere göz at veya akademik takvimini kontrol et.
                    </p>
                </div>
                <div class="text-right hidden md:block">
                    <p class="text-sm font-medium text-slate-400 uppercase tracking-wide">Bugünün Tarihi</p>
                    <p class="text-xl font-bold text-slate-700 dark:text-slate-200">@bugun</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

                <a class="group bg-card-light dark:bg-card-dark rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 dark:border-slate-800"
                   href="/Yemekhane/Index">
                    <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/40 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">restaurant</span>
                    </div>
                    <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2 group-hover:text-primary transition-colors">Yemekhane</h3>
                    <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                        Haftalık yemek menülerini, kalori bilgilerini ve vejetaryen seçeneklerini görüntüleyin.
                    </p>
                </a>

                <a class="group bg-card-light dark:bg-card-dark rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 dark:border-slate-800"
                   href="/AkademikTakvim/Index">
                    <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/40 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">calendar_month</span>
                    </div>
                    <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2 group-hover:text-primary transition-colors">Akademik Takvim</h3>
                    <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                        Sınav tarihlerini, tatilleri, kayıt dönemlerini ve önemli etkinlikleri takip edin.
                    </p>
                </a>

                <a class="group bg-card-light dark:bg-card-dark rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 dark:border-slate-800"
                   href="/Staj/Index">
                    <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/40 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">business_center</span>
                    </div>
                    <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2 group-hover:text-primary transition-colors">Staj İlanları</h3>
                    <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                        Bölümüne uygun güncel staj fırsatlarını görüntüleyin ve doğrudan başvuru yapın.
                    </p>
                </a>

                <a class="group bg-card-light dark:bg-card-dark rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-slate-100 dark:border-slate-800"
                   href="/Anket/Index">
                    <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/40 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">bar_chart</span>
                    </div>
                    <div class="flex justify-between items-start">
                        <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2 group-hover:text-primary transition-colors">Anketler</h3>
                        <span class="px-2 py-1 text-xs font-bold bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400 rounded-lg">Aktif</span>
                    </div>
                    <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                        Aktif anketlere katılın, kampüs yaşamına ve kulüp etkinliklerine yön verin.
                    </p>
                </a>

                <a class="group col-span-1 md:col-span-2 lg:col-span-2 bg-gradient-to-br from-slate-800 to-slate-900 dark:from-slate-800 dark:to-black rounded-2xl p-6 shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
                   href="/AiDanisman/Index">
                    <div class="absolute top-0 right-0 w-64 h-64 bg-primary opacity-10 blur-3xl rounded-full transform translate-x-10 -translate-y-10"></div>
                    <div class="flex flex-col md:flex-row items-start md:items-center gap-6 relative z-10 h-full">
                        <div class="w-14 h-14 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center text-primary shadow-inner">
                            <span class="material-symbols-rounded text-3xl">smart_toy</span>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-white mb-2 flex items-center gap-2">
                                AI Danışman
                                <span class="bg-primary text-white text-[10px] px-2 py-0.5 rounded-full uppercase tracking-wider font-bold">Beta</span>
                            </h3>
                            <p class="text-slate-300 text-sm leading-relaxed max-w-md">
                                Öğrenci asistanına merak ettiğin her şeyi sor. Ders programın, yönetmelikler veya kampüs hakkında AI destekli anında cevap al.
                            </p>
                        </div>
                        <div class="bg-primary/20 hover:bg-primary/30 border border-primary/50 text-primary-light px-4 py-2 rounded-lg text-sm font-medium transition-colors whitespace-nowrap self-start md:self-center">
                            Sohbete Başla →
                        </div>
                    </div>
                </a>
            </div>

            <div class="mt-8">
                <div class="bg-card-light dark:bg-card-dark rounded-2xl p-6 md:p-8 border border-slate-100 dark:border-slate-800 shadow-sm relative overflow-hidden group">
                    <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4 pointer-events-none transition-opacity duration-500 group-hover:opacity-100 opacity-50"></div>
                    <div class="relative z-10 flex flex-col md:flex-row items-center gap-6 md:gap-8">
                        <div class="shrink-0 w-16 h-16 rounded-2xl bg-orange-50 dark:bg-orange-900/20 text-primary flex items-center justify-center shadow-sm">
                            <span class="material-symbols-rounded text-4xl">map</span>
                        </div>
                        <div class="flex-1 w-full text-center md:text-left">
                            <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2">Nereye Gitmek İstersin?</h3>
                            <p class="text-slate-500 dark:text-slate-400 text-sm mb-6 max-w-2xl mx-auto md:mx-0">
                                Kampüs haritası üzerinden aradığın konuma hızlıca ulaş. Derslikler, fakülteler veya sosyal alanlar için arama yapabilirsin.
                            </p>

                            <form action="/Kroki/Index" method="get" class="relative max-w-2xl mx-auto md:mx-0 mb-4 group-focus-within:ring-2 ring-primary/20 rounded-xl transition-all">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <span class="material-symbols-rounded text-slate-400">search</span>
                                </div>
                                <input type="text" name="kod"
                                       class="block w-full pl-11 pr-24 py-4 border-slate-200 dark:border-slate-700 rounded-xl bg-slate-50 dark:bg-slate-900/50 text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-0 transition-colors shadow-sm text-sm md:text-base"
                                       placeholder="Bina, derslik veya bir yerleşke ara (Örn: B2-01)..." />
                                <div class="absolute inset-y-2 right-2">
                                    <button type="submit" class="h-full px-5 bg-primary hover:bg-primary-dark text-white rounded-lg text-sm font-semibold transition-colors shadow-sm flex items-center gap-1">
                                        Git <span class="material-symbols-rounded text-sm">arrow_forward</span>
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

            <footer class="mt-12 text-center text-slate-400 text-sm pb-8">
                © 2025 HeyDOU - Kişiselleştirilmiş Öğrenci Portalı. <a class="hover:text-primary underline" href="#">Gizlilik</a>
            </footer>
        </div>
    </main>
</body>
</html>