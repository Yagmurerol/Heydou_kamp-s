@{
    Layout = null;
    ViewData["Title"] = "Mekan Arama";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeyDOU</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#F97316", // Turuncu
                        "primary-dark": "#c2410c",
                        "background-light": "#f8f6f6",
                        "background-dark": "#0f172a",
                        "card-dark": "#1e293b"
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] }
                }
            }
        };
    </script>

    <style>
        @@keyframes floaty {
            0%, 100% {
                transform: translateY(0);
                opacity: .4;
            }

            50% {
                transform: translateY(-18px);
                opacity: .8;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .blob {
            filter: blur(70px);
            animation: floaty 14s ease-in-out infinite;
            z-index: -1;
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.5s ease-out forwards;
        }

        /* Modal gizleme/gösterme geçişi */
        #imageModal {
            transition: opacity 0.3s ease;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col items-center py-10 font-sans text-slate-800 dark:text-slate-200 transition-colors duration-300 relative overflow-x-hidden">

    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute -top-32 -left-32 w-[500px] h-[500px] rounded-full bg-orange-300/20 blob"></div>
        <div class="absolute top-40 -right-40 w-[600px] h-[600px] rounded-full bg-orange-200/20 blob"></div>
    </div>

    <div class="w-full max-w-4xl px-4 relative z-10">

        <div class="mb-8">
            <a href="/Home/Index" class="inline-flex items-center gap-2 text-sm text-slate-400 hover:text-primary transition-colors mb-4 font-medium">
                <span class="material-symbols-rounded text-lg">arrow_back</span> Ana Sayfaya Dön
            </a>
            <h1 class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white mb-2 tracking-tight">
                Mekan Arama
            </h1>
            <p class="text-slate-500 dark:text-slate-400 text-lg">
                Aradığın sınıfın veya birimin kodunu gir, yerini hemen bul.
            </p>
        </div>

        <div class="bg-white dark:bg-card-dark p-3 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-700 flex flex-col md:flex-row items-center gap-3 mb-10 transition-shadow focus-within:shadow-md focus-within:border-primary/50">
            <div class="relative w-full">
                <span class="material-symbols-rounded absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">search</span>
                <input type="text" id="searchInput"
                       class="w-full bg-transparent border-none focus:ring-0 rounded-xl py-3 pl-12 pr-4 text-lg text-slate-900 dark:text-white placeholder-slate-400 font-medium"
                       placeholder="Örn: B2-01" />
            </div>

            <button onclick="mekanAra()" class="w-full md:w-auto bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-xl font-bold transition-all shadow-lg shadow-orange-500/30 flex items-center justify-center gap-2 active:scale-95">
                ARA <span class="material-symbols-rounded">near_me</span>
            </button>
        </div>

        <div id="loadingArea" style="display:none;" class="text-center py-12">
            <div class="animate-spin w-12 h-12 border-4 border-primary/30 border-t-primary rounded-full mx-auto mb-4"></div>
            <p class="text-primary font-bold animate-pulse">Konum aranıyor...</p>
        </div>

        <div id="resultArea" style="display:none;" class="w-full bg-white dark:bg-card-dark rounded-[2rem] p-6 md:p-8 shadow-xl border border-slate-100 dark:border-slate-800 mt-4 animate-fade-in-up">

            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 border-b border-slate-100 dark:border-slate-700 pb-6">
                <div>
                    <div class="flex items-center gap-3 mb-1">
                        <h3 id="mekanKodu" class="text-4xl font-black text-slate-900 dark:text-white tracking-tighter">-</h3>
                        <span class="bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider flex items-center gap-1">
                            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span> Bulundu
                        </span>
                    </div>
                    <p id="aciklama" class="text-slate-500 dark:text-slate-400 font-medium text-lg flex items-center gap-2">
                        <span class="material-symbols-rounded text-primary">info</span>
                        <span>-</span>
                    </p>
                </div>

                <div class="bg-orange-50 dark:bg-orange-900/20 px-6 py-4 rounded-2xl flex items-center gap-4 border border-orange-100 dark:border-orange-800/30 min-w-[180px]">
                    <div class="w-10 h-10 rounded-full bg-white dark:bg-white/10 flex items-center justify-center text-primary shadow-sm">
                        <span class="material-symbols-rounded text-2xl">layers</span>
                    </div>
                    <div>
                        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">BULUNDUĞU KAT</p>
                        <p id="katAdi" class="text-xl font-black text-slate-800 dark:text-white leading-none mt-0.5">-</p>
                    </div>
                </div>
            </div>

            <div class="relative group rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
                <img id="krokiResmi" src="" alt="Kroki Gelecek" class="w-full h-auto object-contain transition-transform duration-700" />

                <button onclick="openModal()" class="absolute bottom-4 right-4 bg-white/90 dark:bg-black/80 hover:bg-white hover:text-primary backdrop-blur-sm px-5 py-3 rounded-xl text-sm font-bold text-slate-700 dark:text-slate-300 shadow-lg transition-all flex items-center gap-2 cursor-pointer transform hover:scale-105 active:scale-95">
                    <span class="material-symbols-rounded">zoom_in</span>
                    Resmi Büyüt
                </button>
            </div>
        </div>

        <div id="errorArea" style="display:none;" class="w-full bg-white dark:bg-card-dark rounded-[2rem] p-10 border-2 border-dashed border-slate-200 dark:border-slate-700 mt-4 text-center">
            <div class="bg-red-50 dark:bg-red-900/20 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4 text-red-500">
                <span class="material-symbols-rounded text-4xl">wrong_location</span>
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white">Sonuç Bulunamadı</h3>
            <p id="errorMessage" class="text-slate-500 dark:text-slate-400 mt-2 max-w-md mx-auto">
                Bu koda sahip bir yer bulunamadı. Lütfen 'B2-01' gibi tam kod giriniz.
            </p>
        </div>

    </div>

    <div id="imageModal" class="fixed inset-0 z-50 bg-black/90 hidden flex items-center justify-center p-4 backdrop-blur-sm" onclick="closeModal()">
        <div class="relative w-full max-w-7xl max-h-screen">
            <button onclick="closeModal()" class="absolute -top-12 right-0 text-white hover:text-primary transition-colors">
                <span class="material-symbols-rounded text-4xl">close</span>
            </button>

            <img id="modalImage" src="" class="w-full h-auto max-h-[90vh] object-contain rounded-lg shadow-2xl" onclick="event.stopPropagation()" />

            <p class="text-center text-white/70 mt-4 text-sm">Kapatmak için boş bir yere tıklayın</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Enter tuşu desteği
            document.getElementById("searchInput").addEventListener("keypress", function(e) {
                if (e.key === "Enter") mekanAra();
            });

            // URL'den gelen kodu al (Ana sayfadan gönderilen)
            const urlParams = new URLSearchParams(window.location.search);
            const gelenKod = urlParams.get('kod');

            if (gelenKod) {
                document.getElementById("searchInput").value = gelenKod;
                mekanAra();
            }
        });

        // MODAL FONKSİYONLARI
        function openModal() {
            const imgSrc = document.getElementById("krokiResmi").src;
            if(!imgSrc) return; // Resim yoksa açma

            document.getElementById("modalImage").src = imgSrc;
            const modal = document.getElementById("imageModal");
            modal.classList.remove("hidden");
            // Animasyon için küçük bir gecikme
            setTimeout(() => { modal.style.opacity = "1"; }, 10);
        }

        function closeModal() {
            const modal = document.getElementById("imageModal");
            modal.style.opacity = "0";
            setTimeout(() => { modal.classList.add("hidden"); }, 300);
        }

        // Klavye ile ESC basınca kapatma
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                closeModal();
            }
        });

        async function mekanAra() {
            const input = document.getElementById("searchInput");
            const kod = input.value.trim();

            if (!kod) return;

            document.getElementById("loadingArea").style.display = "block";
            document.getElementById("resultArea").style.display = "none";
            document.getElementById("errorArea").style.display = "none";

            try {
                const response = await fetch(`/Kroki/MekanAra?kod=${kod}`);

                document.getElementById("loadingArea").style.display = "none";

                if (response.ok) {
                    const data = await response.json();

                    document.getElementById("mekanKodu").innerText = data.mekanKodu;
                    document.getElementById("katAdi").innerText = data.katAdi;
                    document.getElementById("aciklama").querySelector("span:last-child").innerText = data.aciklama || "Açıklama yok.";

                    const resimYolu = "/img/" + data.krokiResimAdi;
                    document.getElementById("krokiResmi").src = resimYolu;

                    document.getElementById("resultArea").style.display = "block";
                } else {
                    const err = await response.json();
                    document.getElementById("errorMessage").innerText = err.mesaj || "Aradığınız kriterlere uygun yer bulunamadı.";
                    document.getElementById("errorArea").style.display = "block";
                }
            } catch (error) {
                document.getElementById("loadingArea").style.display = "none";
                document.getElementById("errorMessage").innerText = "Sunucu ile bağlantı kurulamadı.";
                document.getElementById("errorArea").style.display = "block";
            }
        }
    </script>
</body>
</html>