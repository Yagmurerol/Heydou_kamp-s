@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
    var error = ViewBag.Error as string;
}

<!DOCTYPE html>
<html lang="tr" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeyDOU</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&family=Pacifico&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#b91c1c", // Kırmızı
                        "background-light": "#f8f6f6",
                        "background-dark": "#0f172a",
                        "card-light": "#ffffff",
                        "card-dark": "#111827"
                    },
                    fontFamily: {
                        display: ["Plus Jakarta Sans", "system-ui"],
                        logo: ["Pacifico", "cursive"]
                    }
                }
            }
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-family: 'Material Symbols Outlined';
            font-weight: normal;
            font-style: normal;
            font-size: 24px;
            line-height: 1;
            letter-spacing: normal;
            text-transform: none;
            display: inline-block;
            white-space: nowrap;
            word-wrap: normal;
            direction: ltr;
        }

        @@keyframes floaty {
            0% {
                transform: translateY(0);
                opacity: .4;
            }

            50% {
                transform: translateY(-18px);
                opacity: .8;
            }

            100% {
                transform: translateY(0);
                opacity: .4;
            }
        }

        @@keyframes shimmer {
            0% {
                transform: translateX(-60%);
                opacity: 0;
            }

            40% {
                opacity: .5;
            }

            100% {
                transform: translateX(60%);
                opacity: 0;
            }
        }

        @@media (prefers-reduced-motion: reduce) {
            .blob {
                animation: none !important;
            }
        }

        .blob {
            filter: blur(70px);
            animation: floaty 14s ease-in-out infinite;
        }

        .glass {
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
        }

        .spot {
            position: relative;
            overflow: hidden;
            border-radius: 22px;
            transition: all .35s ease;
        }

            .spot::before {
                content: "";
                position: absolute;
                inset: -1px;
                border-radius: 22px;
                background: radial-gradient( 600px circle at var(--mx,20%) var(--my,20%), rgba(185, 28, 28, .15), transparent 65% );
                opacity: 0;
                transition: opacity .3s ease;
                pointer-events: none;
            }

            .spot:hover::before {
                opacity: 1;
            }

            .spot:hover {
                transform: translateY(-6px) scale(1.015);
                box-shadow: 0 20px 50px rgba(185, 28, 28, .15);
            }

        .shine::after {
            content: "";
            position: absolute;
            inset: -40%;
            background: linear-gradient( 120deg, transparent 40%, rgba(255,255,255,.25) 50%, transparent 60% );
            transform: translateX(-60%);
            animation: shimmer 2.5s ease-in-out infinite;
            pointer-events: none;
        }
    </style>
</head>

<body class="h-full bg-background-light font-display text-slate-900">
    <div class="relative min-h-full flex items-center justify-center px-4 py-12">

        <div class="absolute inset-0 pointer-events-none">
            <div class="absolute -top-32 -left-32 w-[520px] h-[520px] rounded-full bg-red-200/30 blob"></div>
            <div class="absolute top-40 -right-40 w-[620px] h-[620px] rounded-full bg-red-100/20 blob"></div>
        </div>

        <div class="relative w-full max-w-6xl">

            <div class="text-center mb-12">
                <h1 class="text-7xl md:text-8xl font-logo text-primary drop-shadow-sm tracking-wide leading-tight">
                    HeyDOU
                </h1>

                <p class="text-slate-500 mt-6 text-lg font-medium font-sans">
                    Öğrenci ve Kampüs Yönetim Platformu
                </p>
            </div>

            @if (!string.IsNullOrEmpty(error))
            {
                <div class="mb-6 max-w-3xl mx-auto bg-red-50 border border-red-200 text-red-700 px-5 py-4 rounded-2xl shadow-sm">
                    <strong>Hata:</strong> @error
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <div class="spot shine glass bg-white/90 border border-slate-100 p-8 shadow-xl shadow-red-900/5">
                    <h2 class="text-2xl font-extrabold mb-2 text-primary">🎓 Öğrenci Girişi</h2>
                    <p class="text-slate-500 mb-6">
                        Öğrenci veya Kulüp Başkanı hesabıyla giriş yap.
                    </p>

                    <form asp-controller="Account" asp-action="StudentLogin" method="post" class="space-y-4">
                        <input name="email" type="email" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary transition-colors"
                               placeholder="E-posta" />

                        <input name="password" type="password" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary transition-colors"
                               placeholder="Şifre" />

                        <button type="submit"
                                class="w-full mt-2 bg-primary text-white py-3 rounded-xl font-bold shadow-lg shadow-red-600/30 hover:bg-red-800 hover:scale-[1.02] active:scale-[0.98] transition-all">
                            Giriş Yap
                        </button>
                    </form>
                </div>

                <div class="spot shine glass bg-white/70 border border-slate-100 p-8">
                    <h2 class="text-2xl font-extrabold mb-2 text-slate-800">🏢 Personel Girişi</h2>
                    <p class="text-slate-500 mb-6">
                        Akademik veya idari personel girişi.
                    </p>

                    <form asp-controller="Account" asp-action="StaffLogin" method="post" class="space-y-4">
                        <input name="email" type="email" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-slate-800 focus:ring-slate-800 bg-white/50"
                               placeholder="E-posta" />

                        <input name="password" type="password" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-slate-800 focus:ring-slate-800 bg-white/50"
                               placeholder="Şifre" />

                        <button type="submit"
                                class="w-full mt-2 bg-slate-900 text-white py-3 rounded-xl font-bold shadow-lg hover:bg-black hover:scale-[1.02] active:scale-[0.98] transition-all">
                            Giriş Yap
                        </button>
                    </form>
                </div>

            </div>

            <p class="text-center mt-10 text-xs text-slate-400 font-medium">
                © @DateTime.Now.Year HeyDOU
            </p>
        </div>
    </div>

    <script>
        document.querySelectorAll(".spot").forEach(card => {
            card.addEventListener("mousemove", e => {
                const r = card.getBoundingClientRect();
                card.style.setProperty("--mx", ((e.clientX - r.left) / r.width) * 100 + "%");
                card.style.setProperty("--my", ((e.clientY - r.top) / r.height) * 100 + "%");
            });
        });
    </script>
</body>
</html>