@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
    var error = ViewBag.Error as string;
}

<!DOCTYPE html>
<html lang="tr" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeyDOU</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#ff7a00",
                        "background-light": "#f8f6f6",
                        "background-dark": "#0f172a",
                        "card-light": "#ffffff",
                        "card-dark": "#111827"
                    },
                    fontFamily: {
                        display: ["Plus Jakarta Sans", "system-ui"]
                    }
                }
            }
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0,'wght' 400,'GRAD' 0,'opsz' 24;
        }

        @@keyframes floaty {
            0% {
                transform: translateY(0);
                opacity: .4;
            }

            50% {
                transform: translateY(-18px);
                opacity: .8;
            }

            100% {
                transform: translateY(0);
                opacity: .4;
            }
        }

        @@keyframes shimmer {
            0% {
                transform: translateX(-60%);
                opacity: 0;
            }

            40% {
                opacity: .5;
            }

            100% {
                transform: translateX(60%);
                opacity: 0;
            }
        }

        .blob {
            filter: blur(70px);
            animation: floaty 14s ease-in-out infinite;
        }

        .glass {
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
        }

        .spot {
            position: relative;
            overflow: hidden;
            border-radius: 22px;
            transition: all .35s ease;
        }

            .spot::before {
                content: "";
                position: absolute;
                inset: -1px;
                border-radius: 22px;
                background: radial-gradient( 600px circle at var(--mx,20%) var(--my,20%), rgba(255,122,0,.25), transparent 65% );
                opacity: 0;
                transition: opacity .3s ease;
                pointer-events: none;
            }

            .spot:hover::before {
                opacity: 1;
            }

            .spot:hover {
                transform: translateY(-6px) scale(1.015);
                box-shadow: 0 20px 50px rgba(255,122,0,.25);
            }

        .shine::after {
            content: "";
            position: absolute;
            inset: -40%;
            background: linear-gradient( 120deg, transparent 40%, rgba(255,255,255,.25) 50%, transparent 60% );
            transform: translateX(-60%);
            animation: shimmer 2.5s ease-in-out infinite;
            pointer-events: none;
        }

        @@media (prefers-reduced-motion: reduce) {
            .blob {
                animation: none !important;
            }
        }
    </style>
</head>

<body class="h-full bg-background-light font-display text-slate-900">
    <div class="relative min-h-full flex items-center justify-center px-4 py-12">

        <!-- BACKGROUND BLOBS -->
        <div class="absolute inset-0 pointer-events-none">
            <div class="absolute -top-32 -left-32 w-[520px] h-[520px] rounded-full bg-orange-300/30 blob"></div>
            <div class="absolute top-40 -right-40 w-[620px] h-[620px] rounded-full bg-orange-200/20 blob"></div>
        </div>

        <div class="relative w-full max-w-6xl">

            <!-- LOGO -->
            <div class="text-center mb-10">
                <h1 class="text-6xl md:text-7xl font-black tracking-tight">
                    Hey<span class="text-primary">DOU</span>
                </h1>
                <p class="text-slate-500 mt-2">
                    Öğrenci ve Kampüs Yönetim Platformu
                </p>
            </div>

            @if (!string.IsNullOrEmpty(error))
            {
                <div class="mb-6 max-w-3xl mx-auto bg-red-50 border border-red-200 text-red-700 px-5 py-4 rounded-2xl">
                    <strong>Hata:</strong> @error
                </div>
            }

            <!-- LOGIN CARDS -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <!-- STUDENT -->
                <div class="spot shine glass bg-white/80 border border-slate-100 p-8">
                    <h2 class="text-2xl font-extrabold mb-2">🎓 Öğrenci Girişi</h2>
                    <p class="text-slate-500 mb-6">
                        Öğrenci veya Kulüp Başkanı hesabıyla giriş yap.
                    </p>

                    <form asp-controller="Account" asp-action="StudentLogin" method="post" class="space-y-4">
                        <input name="email" type="email" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary"
                               placeholder="E-posta" />

                        <input name="password" type="password" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary"
                               placeholder="Şifre" />

                        <button type="submit"
                                class="w-full mt-2 bg-primary text-white py-3 rounded-xl font-bold shadow-lg hover:opacity-90 transition">
                            Giriş Yap
                        </button>
                    </form>
                </div>

                <!-- STAFF -->
                <div class="spot shine glass bg-white/70 border border-slate-100 p-8">
                    <h2 class="text-2xl font-extrabold mb-2">🏢 Personel Girişi</h2>
                    <p class="text-slate-500 mb-6">
                        Akademik veya idari personel girişi.
                    </p>

                    <form asp-controller="Account" asp-action="StaffLogin" method="post" class="space-y-4">
                        <input name="email" type="email" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary"
                               placeholder="E-posta" />

                        <input name="password" type="password" required
                               class="w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-primary focus:ring-primary"
                               placeholder="Şifre" />

                        <button type="submit"
                                class="w-full mt-2 bg-slate-900 text-white py-3 rounded-xl font-bold shadow-lg hover:bg-slate-800 transition">
                            Giriş Yap
                        </button>
                    </form>
                </div>

            </div>

            <p class="text-center mt-10 text-xs text-slate-400">
                © @DateTime.Now.Year HeyDOU
            </p>
        </div>
    </div>

    <script>
        document.querySelectorAll(".spot").forEach(card => {
            card.addEventListener("mousemove", e => {
                const r = card.getBoundingClientRect();
                card.style.setProperty("--mx", ((e.clientX - r.left) / r.width) * 100 + "%");
                card.style.setProperty("--my", ((e.clientY - r.top) / r.height) * 100 + "%");
            });
        });
    </script>
</body>
</html>
