@model List<hey.dou.Models.HaftalikMenu>
@{
    ViewData["Title"] = "Yemekhane Menüsü";

    var baslangic = (DateOnly)ViewBag.Baslangic;
    var bitis = (DateOnly)ViewBag.Bitis;
    var oncekiHaftaUrl = Url.Action("Index", "Yemekhane", new { startOfWeek = ((DateOnly)ViewBag.OncekiHafta).ToString("yyyy-MM-dd") });
    var sonrakiHaftaUrl = Url.Action("Index", "Yemekhane", new { startOfWeek = ((DateOnly)ViewBag.SonrakiHafta).ToString("yyyy-MM-dd") });
}

<body class="bg-background-light dark:bg-background-dark font-display text-text-light dark:text-text-dark">
    <div class="relative flex min-h-screen flex-col">
        <header class="flex items-center justify-between px-4 sm:px-10 lg:px-40 py-4">
            <div class="flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary text-white shadow-md">
                    <span class="material-symbols-outlined text-3xl">restaurant_menu</span>
                </div>
                <h1 class="text-gray-800 dark:text-white text-xl font-bold">hey.dou</h1>
            </div>
            <nav class="hidden md:flex gap-6">
                <a class="text-gray-500 hover:text-primary" href="#">Ana Sayfa</a>
                <a class="text-gray-500 hover:text-primary" href="#">Hakkımızda</a>
                <a class="text-primary font-semibold" href="#">Yemekhane</a>
                <a class="text-gray-500 hover:text-primary" href="#">İletişim</a>
            </nav>
        </header>

        <main class="px-4 sm:px-10 lg:px-40 py-8 flex-1">
            <div class="flex flex-col items-center text-center gap-4 mb-8">
                <h2 class="text-4xl md:text-5xl font-black text-gray-800 dark:text-white">Haftanın Lezzetleri</h2>
                <p class="text-gray-500 dark:text-gray-300 max-w-3xl">
                    Öğrencilerimiz için sevgiyle hazırladığımız, besleyici ve lezzetli yemeklerle dolu bir haftaya merhaba deyin!
                </p>
            </div>

            <!-- Hafta barı (İNDİR YOK) -->
            <div class="flex justify-between items-center mb-10 bg-white dark:bg-card-dark rounded-xl px-4 py-3 shadow-sm">
                <div class="flex items-center gap-3">
                    <a href="@oncekiHaftaUrl"
                       class="h-10 w-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600">
                        <span class="material-symbols-outlined">chevron_left</span>
                    </a>
                    <h3 class="text-lg md:text-xl font-bold text-gray-800 dark:text-white">
                        @baslangic.ToString("dd MMMM") - @bitis.ToString("dd MMMM") Haftası
                    </h3>
                    <a href="@sonrakiHaftaUrl"
                       class="h-10 w-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600">
                        <span class="material-symbols-outlined">chevron_right</span>
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (Model != null && Model.Any())
                {
                    foreach (var menu in Model)
                    {
                        <div class="bg-white dark:bg-card-dark rounded-xl shadow-md p-6 hover:border-primary border border-transparent transition">
                            <h3 class="text-2xl font-bold text-primary mb-4 pb-4 border-b border-gray-100 dark:border-gray-700">
                                @menu.Gun
                            </h3>
                            <ul class="space-y-3 text-gray-700 dark:text-gray-200 text-lg">
                                @if (!string.IsNullOrWhiteSpace(menu.Corba))
                                {
                                    <li>@menu.Corba</li>
                                }
                                <li>@menu.AnaYemek</li>
                                @if (!string.IsNullOrWhiteSpace(menu.YardimciYemek))
                                {
                                    <li>@menu.YardimciYemek</li>
                                }
                                @if (!string.IsNullOrWhiteSpace(menu.TatliVeyaMeyve))
                                {
                                    <li>@menu.TatliVeyaMeyve</li>
                                }
                            </ul>
                        </div>
                    }
                }
                else
                {
                    <div class="col-span-3 text-center text-gray-500 dark:text-gray-300 py-10">
                        Bu hafta için menü bulunamadı.
                    </div>
                }
            </div>
        </main>
    </div>
</body>
